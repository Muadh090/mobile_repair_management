<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_technician_performance_tree" model="ir.ui.view">
        <field name="name">technician.performance.tree</field>
        <field name="model">technician.performance</field>
        <field name="arch" type="xml">
            <list string="Technician Performance" create="false" edit="false">
                <field name="technician_id"/>
                <field name="jobs_completed" sum="Jobs"/>
                <field name="sla_hits" sum="SLA Hits"/>
                <field name="sla_total" sum="SLA Total"/>
                <field name="sla_hit_rate" widget="percentage"/>
                <field name="rework_count" sum="Reworks"/>
                <field name="parts_qty" sum="Parts Qty"/>
                <field name="parts_value" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Parts Value"/>
            </list>
        </field>
    </record>

    <record id="view_technician_performance_pivot" model="ir.ui.view">
        <field name="name">technician.performance.pivot</field>
        <field name="model">technician.performance</field>
        <field name="arch" type="xml">
            <pivot string="Technician Performance">
                <field name="technician_id" type="row"/>
                <field name="jobs_completed" type="measure" operator="sum"/>
                <field name="sla_hits" type="measure" operator="sum"/>
                <field name="sla_total" type="measure" operator="sum"/>
                <field name="rework_count" type="measure" operator="sum"/>
                <field name="parts_qty" type="measure" operator="sum"/>
                <field name="parts_value" type="measure" operator="sum"/>
            </pivot>
        </field>
    </record>

    <record id="view_technician_performance_graph" model="ir.ui.view">
        <field name="name">technician.performance.graph</field>
        <field name="model">technician.performance</field>
        <field name="arch" type="xml">
            <graph string="Technician Performance" type="bar" stacked="True">
                <field name="technician_id" type="row"/>
                <field name="jobs_completed" type="measure" operator="sum"/>
                <field name="sla_hit_rate" type="measure"/>
                <field name="rework_count" type="measure" operator="sum"/>
                <field name="parts_value" type="measure" operator="sum"/>
            </graph>
        </field>
    </record>

    <record id="action_technician_performance" model="ir.actions.act_window">
        <field name="name">Technician Performance</field>
        <field name="res_model">technician.performance</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="views" eval="[(ref('mobile_repair_management.view_technician_performance_graph'), 'graph'), (ref('mobile_repair_management.view_technician_performance_pivot'), 'pivot'), (ref('mobile_repair_management.view_technician_performance_tree'), 'list')]"/>
        <field name="help" type="html">
            <p>
                Track jobs completed, SLA hit rate, reworks, and parts usage per technician. Switch measures to parts value or jobs to compare throughput and cost impact.
            </p>
        </field>
    </record>
</odoo>
