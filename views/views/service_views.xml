<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Service Kanban View -->
    <record id="view_repair_service_kanban" model="ir.ui.view">
        <field name="name">repair.service.kanban</field>
        <field name="model">repair.service</field>
        <field name="arch" type="xml">
            <kanban default_group_by="service_type">
                <field name="name"/>
                <field name="service_type"/>
                <field name="price"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_title">
                                <field name="name"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <field name="service_type"/>
                                </div>
                                <div>
                                    <field name="price" widget="monetary"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Service Tree View -->
    <record id="view_repair_service_tree" model="ir.ui.view">
        <field name="name">repair.service.tree</field>
        <field name="model">repair.service</field>
        <field name="arch" type="xml">
            <tree string="Services">
                <field name="name"/>
                <field name="service_type"/>
                <field name="price" widget="monetary"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Service Form View -->
    <record id="view_repair_service_form" model="ir.ui.view">
        <field name="name">repair.service.form</field>
        <field name="model">repair.service</field>
        <field name="arch" type="xml">
            <form string="Service">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="service_type"/>
                            <field name="price" required="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <field name="description" widget="html"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Service Action -->
    <record id="action_repair_service" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="res_model">repair.service</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>