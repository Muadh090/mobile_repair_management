<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Team List View -->
    <record id="view_repair_team_tree" model="ir.ui.view">
        <field name="name">repair.team.list</field>
        <field name="model">repair.team</field>
        <field name="arch" type="xml">
            <list string="Teams">
                <field name="name"/>
                <field name="manager_id"/>
                <field name="completed_jobs"/>
                <field name="avg_repair_time"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Team Form View -->
    <record id="view_repair_team_form" model="ir.ui.view">
        <field name="name">repair.team.form</field>
        <field name="model">repair.team</field>
        <field name="arch" type="xml">
            <form string="Team">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="manager_id" required="1"/>
                            <field name="project_id"/>
                            <field name="color" widget="color"/>
                        </group>
                        <group>
                            <field name="completed_jobs" readonly="1"/>
                            <field name="avg_repair_time" readonly="1"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <field name="description" widget="html"/>
                    <field name="member_ids" widget="many2many_tags"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Team Action -->
    <record id="action_repair_team" model="ir.actions.act_window">
        <field name="name">Teams</field>
        <field name="res_model">repair.team</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>