<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_customer_device_history_tree" model="ir.ui.view">
        <field name="name">customer.device.history.tree</field>
        <field name="model">customer.device.history</field>
        <field name="arch" type="xml">
            <list string="Customer/Device History" create="false" edit="false">
                <field name="customer_id"/>
                <field name="brand_id"/>
                <field name="model_id"/>
                <field name="job_count" sum="Jobs"/>
                <field name="repeat_issue_jobs" sum="Repeat Jobs"/>
                <field name="unique_issues" sum="Issues"/>
                <field name="total_spend" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Spend"/>
                <field name="last_repair_date"/>
            </list>
        </field>
    </record>

    <record id="view_customer_device_history_pivot" model="ir.ui.view">
        <field name="name">customer.device.history.pivot</field>
        <field name="model">customer.device.history</field>
        <field name="arch" type="xml">
            <pivot string="Customer/Device History">
                <field name="customer_id" type="row"/>
                <field name="brand_id" type="row"/>
                <field name="model_id" type="row"/>
                <field name="job_count" type="measure" operator="sum"/>
                <field name="repeat_issue_jobs" type="measure" operator="sum"/>
                <field name="unique_issues" type="measure" operator="sum"/>
                <field name="total_spend" type="measure" operator="sum"/>
            </pivot>
        </field>
    </record>

    <record id="view_customer_device_history_graph" model="ir.ui.view">
        <field name="name">customer.device.history.graph</field>
        <field name="model">customer.device.history</field>
        <field name="arch" type="xml">
            <graph string="Customer/Device History" type="bar" stacked="True">
                <field name="customer_id" type="row"/>
                <field name="job_count" type="measure" operator="sum"/>
                <field name="repeat_issue_jobs" type="measure" operator="sum"/>
                <field name="total_spend" type="measure" operator="sum"/>
            </graph>
        </field>
    </record>

    <record id="action_customer_device_history" model="ir.actions.act_window">
        <field name="name">Customer &amp; Device History</field>
        <field name="res_model">customer.device.history</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="views" eval="[(ref('mobile_repair_management.view_customer_device_history_graph'), 'graph'), (ref('mobile_repair_management.view_customer_device_history_pivot'), 'pivot'), (ref('mobile_repair_management.view_customer_device_history_tree'), 'list')]"/>
        <field name="help" type="html">
            <p>
                See past repairs, repeat issues, and cumulative spend by customer/brand/model. Group by customer or model to spot repeat offenders and high-value devices.
            </p>
        </field>
    </record>
</odoo>
