<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Job Card Kanban View -->
    <record id="view_job_card_kanban" model="ir.ui.view">
        <field name="name">job.card.kanban</field>
        <field name="model">job.card</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="state"/>
                <field name="customer_id"/>
                <field name="team_id"/>
                <field name="total_amount"/>
                <field name="create_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="text-muted">
                                        <field name="customer_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="state" widget="badge"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="total_amount" widget="monetary"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Job Card List View -->
    <record id="view_job_card_tree" model="ir.ui.view">
        <field name="name">job.card.list</field>
        <field name="model">job.card</field>
        <field name="arch" type="xml">
            <list string="Job Cards">
                <field name="name" string="Job Card No."/>
                <field name="state" widget="badge"/>
                <field name="customer_id"/>
                <field name="brand_id"/>
                <field name="model_id"/>
                <field name="team_id"/>
                <field name="total_amount" sum="Total Amount"/>
                <field name="invoice_status"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Job Card Form View -->
    <record id="view_job_card_form" model="ir.ui.view">
        <field name="name">job.card.form</field>
        <field name="model">job.card</field>
        <field name="arch" type="xml">
            <form string="Job Card">
                <header>
                    <button name="action_mark_requested" string="Mark as Requested" type="object"
                            class="btn-primary" states="draft"/>
                    <button name="action_generate_quotation" string="Generate Quotation" type="object"
                            class="btn-secondary" states="requested"
                            attrs="{'invisible': [('warranty', '=', True)]}"/>
                    <button name="action_request_parts" string="Request Parts" type="object"
                            class="btn-primary" states="approved"/>
                    <button name="action_parts_arrived" string="Mark Parts Arrived" type="object"
                            class="btn-secondary" states="parts_requested"/>
                    <button name="action_assign_team" string="Assign Team" type="object"
                            class="btn-primary" states="parts_arrived"/>
                    <button name="action_start_repair" string="Start Repair" type="object"
                            class="btn-primary" states="parts_arrived"/>
                    <button name="action_complete_repair" string="Complete Repair" type="object"
                            class="btn-primary" states="in_progress"/>
                    <button name="action_create_invoice" string="Create Invoice" type="object"
                            class="btn-primary" states="completed"
                            attrs="{'invisible': [('warranty', '=', True)]}"/>
                    <button name="action_register_payment" string="Register Payment" type="object"
                            class="btn-secondary" states="completed"
                            attrs="{'invisible': [('warranty', '=', True), ('payment_status', '=', 'paid')]}"/>
                    
                    <field name="state" widget="statusbar" statusbar_visible="draft,requested,quotation,approved,parts_requested,parts_arrived,in_progress,completed,rejected"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_picking" type="object" class="oe_stat_button"
                                icon="fa-truck" attrs="{'invisible': [('picking_id', '=', False)]}">
                            <div class="o_stat_info">
                                <field name="picking_id" widget="statinfo" string="Picking"/>
                            </div>
                        </button>
                        <button name="action_view_invoice" type="object" class="oe_stat_button"
                                icon="fa-money" attrs="{'invisible': [('invoice_id', '=', False)]}">
                            <div class="o_stat_info">
                                <field name="invoice_id" widget="statinfo" string="Invoice"/>
                            </div>
                        </button>
                        <button name="action_view_task" type="object" class="oe_stat_button"
                                icon="fa-tasks" attrs="{'invisible': [('task_id', '=', False)]}">
                            <div class="o_stat_info">
                                <field name="task_id" widget="statinfo" string="Task"/>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                        <h2>
                            <field name="customer_id" widget="many2one_avatar"/>
                        </h2>
                    </div>
                    
                    <group>
                        <group string="Basic Information">
                            <field name="customer_id" domain="[]"/>
                            <field name="customer_phone"/>
                            <field name="customer_email"/>
                            <field name="problem_description" colspan="4"/>
                        </group>
                        
                        <group string="Warranty">
                            <field name="warranty"/>
                            <field name="warranty_number" attrs="{'required': [('warranty', '=', True)]}"/>
                            <field name="warranty_expiry_date" attrs="{'required': [('warranty', '=', True)]}"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Device Details">
                            <group>
                                <group string="Device Information">
                                    <field name="brand_id"/>
                                    <field name="series_id" domain="[('brand_id', '=', brand_id)]"/>
                                    <field name="model_id" domain="[('series_id', '=', series_id)]"/>
                                    <field name="imei"/>
                                    <field name="serial_number"/>
                                    <field name="device_condition"/>
                                    <field name="device_accessories" colspan="4"/>
                                </group>
                                
                                <group string="Inspection">
                                    <field name="inspection_date"/>
                                    <field name="inspection_type"/>
                                    <field name="delivery_type"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Services">
                            <field name="service_ids">
                                <list editable="bottom">
                                    <field name="service_id"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="price"/>
                                    <field name="price_total" sum="Total"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer">
                                <field name="service_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </page>
                        
                        <page string="Parts">
                            <field name="part_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="stock_available"/>
                                    <field name="price_total" sum="Total"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer">
                                <field name="part_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </page>
                        
                        <page string="Quotation" attrs="{'invisible': [('warranty', '=', True)]}">
                            <group>
                                <group string="Quotation Details">
                                    <field name="quotation_date" readonly="1"/>
                                    <field name="quotation_valid_until" readonly="1"/>
                                    <field name="is_quotation_sent"/>
                                </group>
                                
                                <group string="Customer Approval">
                                    <field name="customer_approval"/>
                                    <field name="approval_date" readonly="1"/>
                                </group>
                            </group>
                            
                            <div class="oe_subtotal_footer oe_right">
                                <table class="oe_subtotal_table">
                                    <tr>
                                        <td>Service Total:</td>
                                        <td><field name="service_total" widget="monetary"/></td>
                                    </tr>
                                    <tr>
                                        <td>Parts Total:</td>
                                        <td><field name="part_total" widget="monetary"/></td>
                                    </tr>
                                    <tr>
                                        <td>Subtotal:</td>
                                        <td><field name="subtotal" widget="monetary"/></td>
                                    </tr>
                                    <tr>
                                        <td>Tax (15%):</td>
                                        <td><field name="tax_amount" widget="monetary"/></td>
                                    </tr>
                                    <tr class="oe_subtotal_footer_separator">
                                        <td><strong>Total Amount:</strong></td>
                                        <td><field name="total_amount" widget="monetary"/></td>
                                    </tr>
                                </table>
                            </div>
                        </page>
                        
                        <page string="Team Assignment">
                            <group>
                                <group string="Team Details">
                                    <field name="team_id"/>
                                    <field name="assigned_member_ids" widget="many2many_tags"/>
                                    <field name="expected_duration"/>
                                </group>
                                
                                <group string="Timeline">
                                    <field name="start_date"/>
                                    <field name="completion_date"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Task &amp; Work Log">
                            <field name="task_id">
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="name"/>
                                                <field name="project_id"/>
                                                <field name="user_ids" widget="many2many_tags"/>
                                            </group>
                                            <group>
                                                <field name="stage_id"/>
                                                <field name="priority"/>
                                                <field name="date_deadline"/>
                                            </group>
                                        </group>
                                        <notebook>
                                            <page string="Description">
                                                <field name="description"/>
                                            </page>
                                            <page string="Timesheets">
                                                <field name="timesheet_ids">
                                                    <list>
                                                        <field name="date"/>
                                                        <field name="name"/>
                                                        <field name="user_id"/>
                                                        <field name="unit_amount"/>
                                                    </list>
                                                </field>
                                            </page>
                                        </notebook>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Job Card Search View -->
    <record id="view_job_card_search" model="ir.ui.view">
        <field name="name">job.card.search</field>
        <field name="model">job.card</field>
        <field name="arch" type="xml">
            <search string="Search Job Cards">
                <field name="name" string="Job Card No."/>
                <field name="customer_id"/>
                <field name="brand_id"/>
                <field name="model_id"/>
                <field name="state" filter_domain="[('state', '=', self)]"/>
                <field name="team_id"/>
                <field name="warranty"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Requested" name="requested" domain="[('state', '=', 'requested')]"/>
                <filter string="Quotation" name="quotation" domain="[('state', '=', 'quotation')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Warranty Repairs" name="warranty" domain="[('warranty', '=', True)]"/>
                <filter string="Today" name="today" domain="[('create_date', '>=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Week" name="this_week" domain="[('create_date', '>=', context_today().strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Brand" name="group_brand" context="{'group_by': 'brand_id'}"/>
                    <filter string="Team" name="group_team" context="{'group_by': 'team_id'}"/>
                    <filter string="Month" name="group_month" context="{'group_by': 'create_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Job Card Action -->
    <record id="action_job_card" model="ir.actions.act_window">
        <field name="name">Job Cards</field>
        <field name="res_model">job.card</field>
        <field name="view_mode">kanban,list,form,pivot,graph</field>
        <field name="search_view_id" ref="view_job_card_search"/>
        <field name="context">{'search_default_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first job card!
            </p>
        </field>
    </record>
</odoo>