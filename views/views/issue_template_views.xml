<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_issue_template_tree" model="ir.ui.view">
        <field name="name">repair.issue.template.tree</field>
        <field name="model">repair.issue.template</field>
        <field name="arch" type="xml">
            <list string="Predefined Issues">
                <field name="name"/>
                <field name="brand_id"/>
                <field name="model_id"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="view_issue_template_form" model="ir.ui.view">
        <field name="name">repair.issue.template.form</field>
        <field name="model">repair.issue.template</field>
        <field name="arch" type="xml">
            <form string="Predefined Issue">
                <sheet>
                    <group col="2">
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="brand_id"/>
                            <field name="model_id" domain="[('brand_id', '=', brand_id)]"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Services">
                            <field name="service_line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="service_id"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="price"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Parts">
                            <field name="part_line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_issue_template" model="ir.actions.act_window">
        <field name="name">Predefined Issues</field>
        <field name="res_model">repair.issue.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Create reusable issue templates per brand/model to prefill services and parts on job cards.</p>
        </field>
    </record>
</odoo>
