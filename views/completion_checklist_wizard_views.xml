<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_completion_checklist_wizard" model="ir.ui.view">
        <field name="name">completion.checklist.wizard.form</field>
        <field name="model">completion.checklist.wizard</field>
        <field name="arch" type="xml">
            <form string="Completion Checklist">
                <group>
                    <field name="job_card_id" readonly="1"/>
                    <field name="tests_passed"/>
                    <field name="customer_acknowledged"/>
                    <field name="notes" colspan="2"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
